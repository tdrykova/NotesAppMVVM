<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardBackgroundColor="#707070"
        app:cardCornerRadius="10dp">

        <View
            android:id="@+id/viewPriority"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="right"
            android:layout_margin="10dp"
            android:background="@drawable/red_dot" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/notesTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bold"
                android:text="@string/app_name"
                android:textColor="@color/white"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/notesText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/regular"
                android:text="fhfg ghgfhghf fdkfdjg zxc zdf trgtr rhth grefre reg rfrrfe fer rwe wrw  fgjgfd jbcjkhv fid sdifjsdj jf fgj gfjo fgo gfi ogfdijd fidjoc cvio"
                android:textColor="#D8D8D8"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/notesDuration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/bold"
                android:maxLines="1"
                android:text="23 March 2021"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/notesTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/bold"
                android:maxLines="1"
                android:text="23 March 2021"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/notesDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/bold"
                android:maxLines="1"
                android:text="23 March 2021"
                android:textColor="@color/white"
                android:textSize="16sp" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>